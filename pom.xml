            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <configuration>
                            <tasks>
                                <copy todir="${clientBuildAppDir}"
                                      includeEmptyDirs="false">
                                    <fileset dir="${basedir}/client/build/production/JSONExtJS">
                                        <exclude name="**/Readme.md"/>
                                    </fileset>
                                </copy>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>